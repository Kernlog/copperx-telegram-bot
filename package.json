{
  "name": "copperx-telegram-bot",
  "version": "1.0.0",
  "description": "Telegram bot for Copperx Payout that enables users to manage their USDC directly through Telegram",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "telegram",
    "bot",
    "copperx",
    "crypto",
    "usdc",
    "payment"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "node-telegram-bot-api": "^0.64.0",
    "pusher-js": "^8.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.1",
    "@types/node-telegram-bot-api": "^0.63.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
} 